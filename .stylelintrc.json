{
  "extends": "stylelint-config-standard-scss",
  "rules": {
    "indentation": [
      4
    ],
    "selector-class-pattern": null,
    "no-missing-end-of-source-newline": null,
    "value-list-comma-newline-after": "never-multi-line",
    "max-empty-lines": [3, {
      "message": "Максимум линий пустых допустимо: 3"
    }]
  }
}
